-@title= 'SVG Clickable Map'
-@page_classes= 'home'

.container
  .row
    .col-lg-12
      .page-header.text-center
        %h1
          SVG Clickable Map
        .subhead
          =link_to 'Snap.svg', 'https://github.com/adobe-webplatform/Snap.svg'
    .col-lg-6
      .thumbnail.thumbnail-popup
        =image_tag ('guiyang.jpg'), class:'js-img-city img-invert'
        .caption.text-center
          %h3
            Guiyang
            %span.js-path-name
          %p
            =link_to 'Map Source - ', 'https://en.wikipedia.org/wiki/Guiyang'
            =link_to 'Image Source', 'https://unsplash.com/'
    .col-lg-6
      %i.fa.fa-map-marker.fa-3x.map-marker.js-map-marker{'data-city':''}
      %svg.svg-map#svg
