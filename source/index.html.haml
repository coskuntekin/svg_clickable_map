-@title= 'SVG Clickable Map'
-@page_classes= 'home'

%header{class: 'header'}
  .page-header.text-center
    %h1
      SVG Clickable Map
    .subhead
      =link_to 'Snap.svg', 'https://github.com/adobe-webplatform/Snap.svg'
%main{role: 'main', class: 'main'}
  %section{class:'layout layout-left'}
    .thumbnail.thumbnail-popup
      =image_tag ('guiyang.jpg'), class:'img-responsive js-img-city img-invert'
      .caption.text-center
        %h3
          贵阳
          %snap.js-path-name
        %p
          =link_to 'Map Source', 'https://en.wikipedia.org/wiki/Guiyang'
          %small -
          =link_to 'Image Source', 'https://unsplash.com/'
  %section{class:'layout layout-right js-map-loading map-loading-layout'}
    .map-layout.js-map-layout
      .is-loading.js-is-loading
        %p 
          Loading ....  
      %svg{id:'svg', class:'svg-map'}

